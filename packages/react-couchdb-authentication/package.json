{
  "name": "@stanlemon/react-couchdb-authentication",
  "version": "0.10.0",
  "description": "React component for authenticating against a CouchDB user db and syncing it locally with PouchDB.",
  "keywords": [
    "react",
    "pouchdb",
    "couchdb",
    "authentication",
    "app"
  ],
  "type": "module",
  "exports": [
    "./src/index.ts",
    "./src/index.js"
  ],
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest -w",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "rimraf ./dist/",
    "build": "rimraf ./dist/; tsc; NODE_ENV=production babel --config-file ./.babelrc.json --extensions=\".ts,.tsx,.js.,.jsx\" ./src/ --out-dir ./dist/ --ignore  \"src /**/*.test.*\" --source-maps",
    "tsc": "tsc",
    "example": "WEBDEV_ENTRY=./example/Example.tsx webpack serve"
  },
  "author": "Stan Lemon <stanlemon@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stanlemon/javascript/tree/main/packages/react-couchdb-authentication"
  },
  "license": "MIT",
  "peerDependencies": {
    "pouchdb": ">=8.0.0",
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@stanlemon/webdev": "*",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/async-retry": "^1.4.8",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.5",
    "@types/pouchdb": "^6.4.2",
    "@types/react": "^18.3.8",
    "isomorphic-fetch": "^3.0.0",
    "pouchdb": "^9.0.0",
    "pouchdb-adapter-memory": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "buffer": "^6.0.3"
  },
  "overrides": {
    "@types/pouchdb-core": "npm:@stanlemon/types-pouchdb-core@^0.0.1"
  }
}