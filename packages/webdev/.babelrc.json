{
  "presets": [
    [
      "@babel/preset-env",
      {
        "bugfixes": true,
        "targets": {
          "node": "20.0",
          "browsers": [
            "last 1 year",
            "not dead",
            "not opera < 1000",
            "not Samsung < 1000"
          ]
        }
      }
    ],
    [
      "@babel/preset-typescript",
      {
        "allowDeclareFields": true
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ]
  ]
}