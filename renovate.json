{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "mergeConfidence:all-badges",
    ":maintainLockFilesMonthly",
    ":timezone(America/Indiana/Indianapolis)",
    ":enableVulnerabilityAlerts",
    ":automergeMinor",
    "group:react",
    "group:reactMonorepo",
    "group:eslintMonorepo",
    "group:linters",
    "group:jestMonorepo",
    "group:jestPlusTypes",
    "group:jestPlusTSJest"
  ],
  "rangeStrategy": "bump",
  "bumpVersion": "patch",
  "dependencyDashboard": true,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "rebaseWhen": "auto",
  "schedule": [
    "after 8am and before 5pm on monday"
  ],
  "automergeSchedule": [
    "after 8am and before 5pm on monday"
  ],
  "updateNotScheduled": false,
  "minimumReleaseAge": "3 days",
  "automergeType": "pr",
  "vulnerabilityAlerts": {
    "automerge": true,
    "labels": [
      "security"
    ],
    "vulnerabilityFixStrategy": "lowest",
    "prCreation": "immediate"
  },
  "osvVulnerabilityAlerts": true,
  "platformAutomerge": false,
  "packageRules": [
    {
      "groupName": "my own packages",
      "minimumReleaseAge": null,
      "matchPackageNames": [
        "/^@stanlemon/"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automergeType": "branch",
      "automerge": true
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "enabled": false
    },
    {
      "groupName": "nodejs updates",
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchDatasources": [
        "docker",
        "node-version",
        "npm",
        "nvm"
      ]
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchDatasources": [
        "npm"
      ],
      "overrideDatasource": "node-version",
      "overridePackageName": "node"
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchDatasources": [
        "nvm"
      ],
      "overrideDatasource": "node-version",
      "overridePackageName": "node"
    },
    {
      "matchPackageNames": [
        "@types/node"
      ],
      "matchDatasources": [
        "npm"
      ],
      "overrideDatasource": "node-version",
      "overridePackageName": "node"
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchDatasources": [
        "docker"
      ],
      "overrideDatasource": "node-version",
      "overridePackageName": "node"
    },
    {
      "groupName": "node majors (LTS gate)",
      "matchDatasources": [
        "node-version"
      ],
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "7 months",
      "internalChecksFilter": "strict",
      "automerge": false
    },
    {
      "groupName": "npm non-major (catch-all)",
      "groupSlug": "npm-all-non-major",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "!/^@stanlemon\\//"
      ]
    }
  ]
}
