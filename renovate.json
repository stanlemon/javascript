{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "timezone": "America/Indiana/Indianapolis",
  "bumpVersion": "patch",
  "rangeStrategy": "bump",
  "schedule": [
    "after 2am and before 6am on Thursday",
    "after 10am and before 4pm on Saturday"
  ],
  "packageRules": [
    {
      "packageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}