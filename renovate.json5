{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    'mergeConfidence:all-badges',
    ':timezone(America/Indiana/Indianapolis)',
    ':enableVulnerabilityAlerts',
    ':automergeMinor',
    'group:react',
    'group:reactMonorepo',
    'group:eslintMonorepo',
    'group:linters',
    'group:jestMonorepo',
    'group:jestPlusTypes',
    'group:jestPlusTSJest',
  ],
  rangeStrategy: 'bump',
  bumpVersion: 'patch',
  dependencyDashboard: true,
  prConcurrentLimit: 10,
  prHourlyLimit: 0,
  rebaseWhen: 'auto',
  schedule: [
    'after 8am and before 5pm on monday',
  ],
  automergeSchedule: [
    'after 8am and before 5pm on weekdays',
  ],
  updateNotScheduled: false,
  minimumReleaseAge: '3 days',
  automerge: true,
  automergeType: 'pr',
  vulnerabilityAlerts: {
    automerge: true,
    labels: [
      'security',
    ],
    vulnerabilityFixStrategy: 'lowest',
    prCreation: 'immediate',
  },
  osvVulnerabilityAlerts: true,
  platformAutomerge: false,
  assignees: [
    'stanlemon',
  ],
  labels: [
    'renovate-pr',
  ],
  packageRules: [
    {
      groupName: 'my own packages',
      minimumReleaseAge: null,
      matchPackageNames: [
        '/^@stanlemon/',
      ],
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
      ],
      automergeType: 'branch',
      automerge: true,
    },
    {
      matchDepTypes: [
        'peerDependencies',
      ],
      enabled: false,
    },
    {
      groupName: 'nodejs updates (non-major)',
      matchPackageNames: [
        'node',
        '@types/node',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchDatasources: [
        'docker',
        'node-version',
        'npm',
        'nvm',
      ],
      matchManagers: [
        'npm',
        'nvm',
        'docker-compose',
        'dockerfile',
      ],
      matchFileNames: [
        'package.json',
        '.nvmrc',
        'Dockerfile',
        'docker-compose.yml',
      ],
      minimumReleaseAge: '3 days',
      automerge: false,
    },
    {
      groupName: 'nodejs updates (non-major)',
      matchPackageNames: [
        'node',
      ],
      matchDatasources: [
        'npm',
      ],
      overrideDatasource: 'node-version',
      overridePackageName: 'node',
    },
    {
      groupName: 'nodejs updates (non-major)',
      matchPackageNames: [
        'node',
      ],
      matchDatasources: [
        'nvm',
      ],
      overrideDatasource: 'node-version',
      overridePackageName: 'node',
    },
    {
      groupName: 'nodejs updates (non-major)',
      matchPackageNames: [
        '@types/node',
      ],
      matchDatasources: [
        'npm',
      ],
      overrideDatasource: 'node-version',
      overridePackageName: 'node',
    },
    {
      groupName: 'nodejs updates (non-major)',
      matchPackageNames: [
        'node',
      ],
      matchDatasources: [
        'docker',
      ],
      overrideDatasource: 'node-version',
      overridePackageName: 'node',
    },
    {
      groupName: 'nodejs major updates (LTS gate)',
      matchDatasources: [
        'node-version',
      ],
      matchPackageNames: [
        'node',
        '@types/node',
      ],
      matchUpdateTypes: [
        'major',
      ],
      minimumReleaseAge: '7 months',
      internalChecksFilter: 'strict',
      automerge: false,
      matchManagers: [
        'npm',
        'nvm',
        'docker-compose',
        'dockerfile',
      ],
      matchFileNames: [
        'package.json',
        '.nvmrc',
        'Dockerfile',
        'docker-compose.yml',
      ],
    },
    {
      matchManagers: [
        'npm',
      ],
      matchUpdateTypes: [
        'major',
      ],
      matchPackageNames: [
        '!/^@stanlemon\\//',
      ],
      automerge: false,
    },
    {
      groupName: 'github actions digests',
      groupSlug: 'github-actions-digests',
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'digest',
      ],
    },
    {
      groupName: 'npm non-major (catch-all)',
      groupSlug: 'npm-all-non-major',
      matchManagers: [
        'npm',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchPackageNames: [
        '!/^@stanlemon\\//',
        '!/^@types\\/node$/',
        '!/^node$/',
      ],
      automerge: true,
    },
  ],
}
