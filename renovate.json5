{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':enablePreCommit',
    ':preserveSemverRanges',
    ':maintainLockFilesWeekly',
    ':combinePatchMinorReleases',
    'docker:enableMajor',
    'docker:pinDigests',
    'npm:unpublishSafe',
    ':separateMajorReleases',
  ],
  timezone: 'America/Indiana/Indianapolis',
  rangeStrategy: 'bump',
  bumpVersion: 'patch',
  dependencyDashboard: true,
  prConcurrentLimit: 10,
  rebaseWhen: 'auto',
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      groupName: 'non-major dependencies',
      minimumReleaseAge: '7 days',
      schedule: [
        'after 10am and before 4pm on saturday',
      ],
      automerge: true,
      automergeType: 'branch',
      matchPackageNames: [
        '!/^@stanlemon//',
      ],
    },
    {
      groupName: 'eslint packages',
      schedule: [
        'after 10am and before 4pm on saturday',
      ],
      matchPackageNames: [
        '//^eslint//',
      ],
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      groupName: 'major updates',
      minimumReleaseAge: '30 days',
      schedule: [
        'after 10am and before 4pm on saturday',
      ],
      matchPackageNames: [
        '!/^@stanlemon//',
      ],
    },
    {
      matchPackageNames: [
        'node',
      ],
      matchManagers: [
        'dockerfile',
        'npm',
      ],
      minimumReleaseAge: '60 days',
      allowedVersions: '/^[1-9][0-9]*[02468]\\./',
      major: {
        automerge: false,
      },
    },
    {
      groupName: 'my own packages',
      minimumReleaseAge: null,
      automerge: true,
      automergeType: 'branch',
      matchPackageNames: [
        '/^@stanlemon//',
      ],
    },
    {
      matchUpdateTypes: [
        'patch',
        'minor',
      ],
      matchCurrentVersion: '!/^0/',
      automerge: true,
      automergeType: 'branch',
    },
    {
      matchUpdateTypes: [
        'lockFileMaintenance',
      ],
      automerge: true,
      automergeType: 'branch',
    },
  ],
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
    automerge: true,
    schedule: 'at any time',
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'after 10am and before 4pm on saturday',
    ],
  },
}
